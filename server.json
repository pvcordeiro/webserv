{
	"servers": [
		{
			"port": 8080,
			"host": "localhost",
			"max_body_size": 52428800,
			"routes": [
				{
					"path": "/omelhorsite/*",
					"redirect": "https://omelhorsite.pt",
					"methods": [
						"GET"
					]
				},
				{
					"path": "/upload",
					"upload_dir": "www/uploads",
					"methods": [
						"POST"
					]
				},
				{
					"path": "/pagman",
					"index": [
						"index.html", "index.htm"
					],
					"directory": "www",
					"methods": [
						"GET"
					]
				},
				{
					"path": "/cgi/*",
					"directory": "www/cgi",
					"cgi": true,
					"directory_listing": true,
					"methods": ["GET", "POST"]
				},
				{
					"path": "/*",
					"directory": "www",
					"directory_listing": true,
					"upload_dir": "www/uploads",
					"methods": [
						"GET",
						"POST",
						"DELETE"
					]
				}
			],
			"error_pages": [
				{
					"code": 404,
					"page": "/404.html"
				}
			]
		},
		{
			"port": 1143,
			"host": "localhost",
			"extensions": [
				{"ext": "py", "exec": "/usr/bin/python3"},
				{"ext": "php", "exec": "/usr/bin/php-cgi"},
				{"ext": "rb", "exec": "/usr/bin/ruby"},
				{"ext": "c", "exec": "/usr/bin/clang-cgi"},
				{"ext": "cpp", "exec": "/usr/bin/clang-cgi"},
				{"ext": "HC", "exec": "/usr/bin/clang-cgi"}
			],
			"routes": [
				{
					"path": "/*",
					"directory": "www/cgi",
					"index": ["proxy.py"],
					"cgi": true,
					"methods": ["GET", "POST", "DELETE", "PUT", "PATCH", "OPTIONS"]
				}
			]
		},
		{
			"port": 1144,
			"host": "localhost",
			"extensions": [
				{"ext": "php", "exec": "/usr/bin/php-cgi"}

			],
			"routes": [
				{
					"path": "/*",
					"directory": "www/cgi",
					"index": ["test.php"],
					"cgi": true,
					"methods": ["GET", "POST", "DELETE", "PUT", "PATCH", "OPTIONS"]
				}
			]
		},
		{
			"port": 1145,
			"host": "localhost",
			"extensions": [
				{"ext": "rb", "exec": "/usr/bin/ruby"},
				{"ext": "py", "exec": "/usr/bin/python3"}
			],
			"routes": [
				{
					"path": "/*",
					"directory": "www/cgi",
					"index": ["script.py"],
					"cgi": true,
					"methods": ["GET", "POST", "DELETE", "PUT", "PATCH", "OPTIONS"]
				}
			]
		},
		{
			"port": 1146,
			"host": "localhost",
			"routes": [
				{
					"path": "/*",
					"directory": "www",
					"index": ["test.html"],
					"methods": ["GET", "POST", "DELETE", "PUT", "PATCH", "OPTIONS"]
				}
			]
		}
	]
}
